pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'roshan',
                    url: 'https://github.com/aitharoshankumar/badam.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn -f discovery-server/pom.xml clean package'
            }
        }

        stage('Run Discovery Server') {
            steps {
                sh '''
                  nohup java -jar discovery-server/target/discovery-server-0.0.1-SNAPSHOT.jar > discovery.log 2>&1 &
                '''
            }
        }
    }
}
